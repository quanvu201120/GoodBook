<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".navigation_main.AccountFragment">


    <TextView
        android:textColor="@color/brown"
        android:id="@+id/textView3"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Email:  "
        android:textSize="@dimen/size18"
        app:layout_constraintBottom_toBottomOf="@+id/txtEmail_Account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtEmail_Account" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtEmail_Account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:textSize="@dimen/size18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/CardView" />

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtName_Account"
        app:layout_constraintEnd_toEndOf="@+id/imgEditName_Account"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtPhone_Account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:textSize="@dimen/size18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5"
        app:layout_constraintTop_toBottomOf="@+id/txtName_Account" />


    <ImageView
        android:id="@+id/imgEditPhone_Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="@+id/txtPhone_Account"
        app:layout_constraintStart_toEndOf="@+id/txtPhone_Account"
        app:layout_constraintTop_toTopOf="@+id/txtPhone_Account"
        app:layout_constraintVertical_bias="1.0" />


    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintBottom_toTopOf="@+id/txtPhone_Account"
        app:layout_constraintEnd_toEndOf="@+id/imgEditName_Account"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txtName_Account" />

    <View
        android:id="@+id/view2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="@+id/imgEditName_Account"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txtPhone_Account" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/txtName_Account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="40dp"
        android:textSize="@dimen/size18"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView4"
        app:layout_constraintTop_toBottomOf="@+id/txtEmail_Account" />

    <ImageView
        android:id="@+id/imgEditName_Account"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="@+id/txtName_Account"
        app:layout_constraintStart_toEndOf="@+id/txtName_Account"
        app:layout_constraintTop_toTopOf="@+id/txtName_Account" />


    <TextView
        android:textColor="@color/brown"
        android:id="@+id/textView4"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="Tên:  "
        android:textSize="@dimen/size18"
        app:layout_constraintBottom_toBottomOf="@+id/txtName_Account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtName_Account" />

    <TextView
        android:textColor="@color/brown"
        android:id="@+id/textView5"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:text="SĐT:  "
        android:textSize="@dimen/size18"
        app:layout_constraintBottom_toBottomOf="@+id/txtPhone_Account"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/txtPhone_Account" />


    <Button
        android:id="@+id/btnDoiMK_Account"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/orange"
        android:text="Đổi mật khẩu"
        android:textSize="@dimen/size14"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btnAddress_Account"
        app:layout_constraintTop_toBottomOf="@+id/view2" />

    <androidx.cardview.widget.CardView
        android:id="@+id/CardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        app:cardCornerRadius="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgAvatar_Account"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:background="@drawable/avatar_radius"
            android:scaleType="centerCrop"
            android:src="@drawable/ava" />

    </androidx.cardview.widget.CardView>

    <ProgressBar
        android:id="@+id/progressBar_Account"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/orange"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddress_Account"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:backgroundTint="@color/orange"
        android:text=" Địa chỉ "
        android:textSize="@dimen/size14"
        app:layout_constraintEnd_toStartOf="@+id/btnDoiMK_Account"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtPhone_Account" />


</androidx.constraintlayout.widget.ConstraintLayout>
